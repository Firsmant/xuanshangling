

<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower"  scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
  <view class="search flex-wrp">
      <view class="search-left flex-item">
          <image src="../../images/search.png"></image>
          <input placeholder="快速查找。。。" placeholder-class="search-placeholder"/>
      </view>
      <view class="search-right flex-item" bindtap="upper">
          <image src="../../images/lighting.png"></image>
      </view>
  </view>


    <block wx:for="{{rewardList}}" wx:key="index"  >
        <view class="feed-item">
            <view class="feed-source">
                <a class="">
                    <view class="avatar">
                        <image src="{{serverUrl}}{{item.userVO.faceImage}}"></image>
                    </view>
                    <text>{{item.userVO.nickname}}</text>
                </a>
                <image class="item-more" mode="aspectFit" src="../../images/more.png"></image>
            </view>
            <view class="feed-content" bindtap='goDetial' data-id='{{item.id}}'>
                <view class="question">
                    <a class="question-link">
                        <text>{{item.rewardTitle}}</text>
                    </a>
                </view>
                <view class="answer-body">
                    <view>
                        <text class="answer-txt" >{{item.rewardContent}}</text>
                    </view>
                    <view class="answer-actions">
                        <view class="like dot">
                            <a>{{item.createTime}} 发布 </a>
                        </view>
                        <view class="comments dot">
                            <a>? 浏览 </a>
                        </view>
                        <view class="follow-it">
                            <a>￥{{item.rewardPrice}}</a>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
</scroll-view>
